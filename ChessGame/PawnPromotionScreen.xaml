<Window x:Class="ChessGame.PawnPromotionScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChessGame"
        mc:Ignorable="d"
        Title="PawnPromotionScreen" Height="450" Width="800">
    <Grid>
        <Rectangle Fill="#3b2716"></Rectangle>
        <Rectangle Fill="#b09278" Margin="20px" ></Rectangle>
        <StackPanel Height="200" Width="580" Orientation="Horizontal" HorizontalAlignment="Center">
            
            <Border Margin="10" Height="125" Width="125" CornerRadius="25" Background="#877161" Padding="0,0,0,0" BorderThickness="5" BorderBrush="#3b2716">
                <TextBlock Foreground="White" FontSize="84" FontWeight="UltraBlack" TextAlignment="Center" >♕</TextBlock>
            </Border>

            <Border Margin="10" Height="125" Width="125" CornerRadius="25" Background="#877161" Padding="0,0,0,0" BorderThickness="5" BorderBrush="#3b2716">
                <TextBlock Foreground="White" FontSize="84" FontWeight="UltraBlack" TextAlignment="Center" >♖</TextBlock>
            </Border>
            
            <Border Margin="10" Height="125" Width="125" CornerRadius="25" Background="#877161" Padding="0,0,0,0" BorderThickness="5" BorderBrush="#3b2716">
                <TextBlock Foreground="White" FontSize="84" FontWeight="UltraBlack" TextAlignment="Center" >♗</TextBlock>
            </Border>
            
            <Border Margin="10" Height="125" Width="125" CornerRadius="25" Background="#877161" Padding="0,0,0,0" BorderThickness="5" BorderBrush="#3b2716">
                <TextBlock Foreground="White" FontSize="84" FontWeight="UltraBlack" TextAlignment="Center" >♘</TextBlock>
            </Border>
        </StackPanel>
    </Grid>
</Window>
