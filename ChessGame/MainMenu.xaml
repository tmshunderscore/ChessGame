<UserControl x:Class="ChessGame.MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChessGame"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="900">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Height="300" >
            <Button Name="SingleplayerButton" Content="Singleplayer" Height="50" Margin="0,10" Click="Singleplayer_Click"/>
            <Button Name="MultiplayerButton" Content="Multiplayer" Height="50" Margin="0,10" Click="Multiplayer_Click"/>
            <Button Name="SettingsButton" Content="Settings" Height="50" Margin="0,10" Click="Settings_Click"/>
            <Button Name="ExitButton" Content="Exit" Height="50" Margin="0,10" Click="Exit_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
